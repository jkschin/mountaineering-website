<body>
    <!-- Header Carousel -->
    <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="fill" style="background-image:url('/assets/slideshow/slide1_cropped.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Mount SUTD, 6056m</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('/assets/slideshow/slide2_cropped.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Basic Mountaineering Course, India</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image:url('/assets/slideshow/slide3.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Ice Climbing, China</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </header>

    <!-- Page Content -->
    <div class="container">

        <!-- Marketing Icons Section -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Welcome to SUTD Mountaineering
                </h1>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-check"></i>Our Expeditions</h4>
                    </div>
                    <div class="panel-body">
                        <p id="home_paragraph">Check out our blogs to find out about what trips we have been on!</p>
                        <!-- <a href=<%= posts_path %> class="btn btn-default">Learn More</a> -->
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-gift"></i>Upcoming Trips</h4>
                    </div>
                    <div class="panel-body">
                        <p id="home_paragraph"><strong>Ice Climbing and Da Feng, China. 17th December 2016 - 26th December 2016.</strong></p>
                        <p id="home_paragraph"><strong>Ice Climbing and Da Feng, China. 7th January 2017 - 16th January 2017.</strong></p>
                        <!-- <a href="#" class="btn btn-default">Learn More</a> -->
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-compass"></i>Join us!</h4>
                    </div>
                    <div class="panel-body">
                        <p id="home_paragraph">Interested? Email us at mountaineering at club dot sutd dot edu dot sg.</p>
                        <!-- <a href="#" class="btn btn-default">Learn More</a> -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Script to Activate the Carousel -->
    <script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
    </script>

</body>

</html>
