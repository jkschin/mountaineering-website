<body>
    <%= render partial: "layouts/navbar" %>
    <!-- Page Content -->
    <div class="container">
        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Blog</h1>
            </div>
        </div>
        <!-- /.row -->
        <% @posts.each do |post| %>
          <div class="row" style="padding:10px">
              <div class="col-md-1"></div>
              <div class="col-md-3">
                  <a href=<%= post_path(post.id) %>>
                      <img class="img-responsive img-hover" src=<%= get_first_image(post.content) %> alt="">
                  </a>
              </div>
              <div class="col-md-7">
                  <h3><%= post.title %></h3>
                  <p><%= strip_tags(post.content).truncate(400, :separator => " ").html_safe %></p>
                  <a class="btn btn-primary" href=<%= post_path(post.id) %>>View Post</i></a>
              </div>
              <div class="col-md-1"></div>
          </div>
        <% end %>
        <%= render partial: "layouts/footer" %>
    </div>
</body>